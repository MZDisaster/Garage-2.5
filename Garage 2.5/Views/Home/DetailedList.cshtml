@model IEnumerable<Garage_2._5.Models.VehicleDetailsViewModel>

@{
    ViewBag.Title = "DetailedList";
}
@using (Ajax.BeginForm("DetailedList", null, new AjaxOptions
                                {
                                    InsertionMode = InsertionMode.Replace,
                                    UpdateTargetId = "OurTableDiv",
                                    HttpMethod = "GET"
                                }, htmlAttributes: new { @class = "form-inline" }))
{
    <hr />
    <div class="form-group">
        @Html.TextBox("RegNr", null, new { @class = "form-control" })
        <button type="submit" class="btn btn-default">Search</button>
        @Html.DropDownList("VehicleTypeId")
    </div>
}
<div id="OurTableDiv">
    <h2>DetailedList</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>